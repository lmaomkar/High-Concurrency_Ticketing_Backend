{
  "title": "Evently",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Requests per Second",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(evently_http_requests_total[1m])",
          "legendFormat": "{{method}} {{route}} {{status}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } },
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "stat",
      "title": "Total HTTP Requests",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(evently_http_requests_total)"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } },
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "piechart",
      "title": "Booking Outcomes",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (outcome) (evently_booking_requests_total)"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } },
      "gridPos": { "x": 12, "y": 4, "w": 6, "h": 4 }
    },
    {
      "type": "timeseries",
      "title": "Booking Finalize Duration (p95)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(evently_booking_finalize_duration_seconds_bucket[5m]))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "stat",
      "title": "Reconciliation Runs (last 1h)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "increase(evently_reconciliation_runs_total[1h])"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } },
      "gridPos": { "x": 12, "y": 8, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Reconciliation Fixes (last 1h)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "increase(evently_reconciliation_fixes_total[1h])"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short" } },
      "gridPos": { "x": 12, "y": 12, "w": 6, "h": 4 }
    }
  ]
}
